@model Practica1.Models.ViewModels.createSucursal
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Sucursal</h2>

<br />
<br />

@if (ViewBag.ValorMensaje == 1)
{
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" onclick="document.location.href='@Url.Content("~/Sucursal/Index")'">&times;</button>
                    <h2 class="modal-title">Mensaje</h2>
                </div>
                <div class="modal-body">
                    <div class="alert alert-success">@ViewBag.MensajeProceso</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-bs-dismiss="modal" onclick="document.location.href='@Url.Content("~/Sucursal/Index")'">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}
else if (ViewBag.ValorMensaje == 0)
{
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal">&times;</button>
                    <h2 class="modal-title">Mensaje</h2>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger">@ViewBag.MensajeProceso</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}
@using (Html.BeginForm("create", "sucursal", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-4">
            <input type="submit" class="btn btn-success w-100 btn-lg" value="Crear Sucursal" />
            <br />
            <input type="button" class="btn btn-outline-success w-100 btn-lg" value="Volver" onclick="document.location.href='@Url.Content("~/Sucursal/Index")'" />
        </div>
        <div class="col-md-8">
            @Html.LabelFor(u => u.Nombre)
            @Html.TextBoxFor(u => u.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Nombre)
            <br />
            @Html.LabelFor(u => u.Direccion)
            @Html.TextBoxFor(u => u.Direccion, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Direccion)
            <br />
            @Html.LabelFor(u => u.Telefono)
            @Html.TextBoxFor(u => u.Telefono, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Telefono)
        </div>
    </div>
}

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myModal').modal('show');
        })
    </script>
}

